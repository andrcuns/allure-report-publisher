{
  "require": [
    "ts-node/register"
  ],
  "watch-extensions": [
    "ts"
  ],
  "recursive": true,
  "reporter": "allure-mocha",
  "reporterOptions": ["resultsDir=reports/allure-results", "extraReporters=spec"],
  "timeout": 60000,
  "node-option": [
    "loader=ts-node/esm",
    "experimental-specifier-resolution=node"
  ]
}
